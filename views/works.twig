							<div class="pic">
								<img src={{value[0].photo_index}} alt="">
							</div>
							 <div class="works_des">
								<h5>Taiwan / Taipei</h5>
								<h6>{{value[0].thistitle}}</h6>
								<p>{{value[0].intro}}</p>
							</div>

						</div>
					</div>
				</a>
			{% endfor %} -->

		
		</div>
	</div>
</div>











{% endblock %}x